doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/style.css')
    title Account Setting
  body.account-management
    script(src='/javascripts/getUser.js')
    header.navigation-bar
      a.logo-placeholder(href="/")
      .nav
        a(href="/") Home
        a(href="/#how-to-use") How to Use
        a(href="/#about-us") About Us
        a(href="/gallery") Gallery
      .profile-icon
    .content
      .account-card
        .avatar
        .input-section
          p user id
          input#id(type="text", value="user id", readonly)
          span.edit-icon(onclick="enableEdit('id')") ✎
        .input-section
          p email
          input#email(type="email", value="user email", readonly)
          span.edit-icon(onclick="enableEdit('email')") ✎
        .input-section
          p password
          input(type="password", placeholder="password", id="password", value="user password", readonly)
          span.edit-icon(onclick="enableEdit('password')") ✎
        button(type="submit") Save Changes
        button.logout-btn#logout-btn Log out
    script(src='/javascripts/logout.js')
    script(src='/javascripts/account_edit.js')