doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Gallery
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.gallery
    script(src='/javascripts/getUser.js')
    header.navigation-bar
      a.logo-placeholder(href="/")
      .nav
        a(href="/") Home
        a(href="/#how-to-use") How to Use
        a(href="/#about-us") About Us
        a(href="/gallery") Gallery
      .profile-icon profile-icon
    main
      section.gallery
        .gallery-buttons
          button.gallery-btn Personal Gallery
          button.gallery-btn Team Gallery
        .gallery-grid
          if images && images.length > 0
            each image in images
              .gallery-item
                img(src=image.path, alt=image.character)
          else
            p No images found in your gallery.
