extends layout 

block body
	- var bodyClass = 'generate'

block content 
	.content-select
		.terms-container
				.term-container
					h3 CHD
					img(src="/images/chd.png", alt="chd-img")
					p CHaracter Design
				.term-container
					h3 CHS
					img(src="/images/chs.png", alt="chs-img")
					p CHaracter Sketch
				.term-container
					h3 CHSF
					img(src="/images/seg.png", alt="seg-img")
					p CHaracter Sketch Finished
		.select-container
			.select-title Pick a process that suits your needs!
			.process-select
				.select-btn-container
					a.process-select-btn#standard-btn(href='/generate/train')
					.description The most complete process, starting from model training. It provides the best accuracy for coloring your character.
				.select-btn-container
					a.process-select-btn#flex-btn(href='/generate/flexible')
					.description Ideal for quickly adjusting character colors after training a model using the standard process.
				.select-btn-container
					a.process-select-btn#fast-btn(href='/generate/fast')
					.description Our quickest option, using a preset model to color your character efficiently.