extends layout

block body
  - var bodyClass = 'generate'

block content
  .content
    .loading-mask
      .loading
        span(data-text="L") L
        span(data-text="O") O
        span(data-text="A") A
        span(data-text="D") D
        span(data-text="I") I
        span(data-text="N") N
        span(data-text="G") G
    .form
      .upload-form
        form(id="uploadFormFlex", method="post", action="/uploadAndDetect_flex", enctype="multipart/form-data")
          .upload-section
            .upload
              span the name of the character
              input#character_name(type="text" name="character_name" placeholder="character name" required)
            .upload
              label(for="model-select") choose the model you would like to use for detecting
              select.model-select#model-select(name="options")
            .upload-img
              .upload
                span Upload CHD
                .upload-box#uploadBoxCHD
                  input#chd(type="file" name="uploadBoxCHD" accept="image/*" multiple onchange="handleFiles(this.files, 'uploadBoxCHD')")
              .upload
                span Upload CHS
                .upload-box#uploadBoxCHS
                  input#chs(type="file" name="uploadBoxCHS" accept="image/*" multiple onchange="handleFiles(this.files, 'uploadBoxCHS')")
          .btn-container#btn-container
            button.generate-btn(type="button" onclick="submitFormFlex()") âš¡ Detect
  script(src='/javascripts/loading.js')
  script(src='/javascripts/upload.js')
  script(src='/javascripts/getModel.js')