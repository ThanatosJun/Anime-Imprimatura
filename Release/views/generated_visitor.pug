doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Generated_visitor
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.generated-visitor
    script(src='/javascripts/getUser.js')
    script(src='/javascripts/loading.js')
    .bouncing-blobs-container
      .bouncing-blobs-glass
      .bouncing-blobs
        .bouncing-blob.bouncing-blob--black
        .bouncing-blob.bouncing-blob--blue
        .bouncing-blob.bouncing-blob--black
        .bouncing-blob.bouncing-blob--purple
        .bouncing-blob.bouncing-blob--black
        .bouncing-blob.bouncing-blob--purple
        .bouncing-blob.bouncing-blob--pink
    header.navigation-bar
      a.logo-placeholder(href="/")
      .nav
        a(href="/") Home
        a(href="/#how-to-use") How to Use
        a(href="/#about-us") About Us
        a(href="/gallery") Gallery
      a.login-btn(href="login") Log In
    main.content
      .loading-mask
        .loading 
          span(data-text="L") L
          span(data-text="O") O
          span(data-text="A") A
          span(data-text="D") D
          span(data-text="I") I
          span(data-text="N") N
          span(data-text="G") G
      .title Here it is!
      .container
        .content-box.chs
          .image-title your chs
          .image-container#detectResult
        .content-box.final
          .color-container#colorContainer
          .image-title the result
          .image-container#finalImage
      .buttons
        button.edit-btn Edit
        button#save-btn.save-btn Save to Gallery
        button#download-btn.download-btn Download
    script(src='/javascripts/getFinalImages.js')
    script(src="/javascripts/anm_background.js")
